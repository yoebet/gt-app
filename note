
python inference_for_demo_video.py \
--wav_path data/audio/acknowledgement_english.m4a \
--style_clip_path data/style_clip/3DMM/M030_front_neutral_level1_001.mat \
--pose_path data/pose/RichardShelby_front_neutral_level1_001.mat \
--image_path data/src_img/uncropped/male_face.png \
--cfg_scale 1.0 \
--max_gen_len 30 \
--device cpu \
--output_name acknowledgement_english@M030_front_neutral_level1_002@male_face



ffmpeg -i output.mp4 2>&1 | grep Duration

ffprobe -v error -show_entries format=duration -of default=noprint_wrappers=1:nokey=1 output.mp4
ffprobe -v error -show_entries stream=duration -of default=noprint_wrappers=1:nokey=1 -select_streams v:0 output.mp4

ffprobe -v quiet -show_streams -select_streams v:0 -of json output.mp4

